@model IEnumerable<CBMS.Entity.Model.Trip>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-12">
        <h3>Trip</h3>
        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>tripId</th>
                    <th>tripCount</th>
                    <th>RouteDetails</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trip in Model)
                 {
                    <tr>
                        <td>@trip.tripId</td>
                        <td>@trip.tripCount</td>
                        <td>@trip.routeDetails</td>
                        <td><a asp-controller="Trip" asp-action="EditTrip" asp-route-TripId="@trip.tripId">Edit</a></td>
                        <td><a asp-controller="Trip" asp-action=" DeleteTrip" asp-route-TripId="@trip.tripCount">Delete</a></td>
                    </tr>
                 }
            </tbody>
        </table>
    </div>
</div>
